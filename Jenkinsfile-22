pipeline {
    agent any

    stages {
        stage('validate') {
            steps {
               sh "mvn validate"
               sh "mvn clean"
            }
        }
         stage('Build') {
            steps {
               sh "mvn compile"
               
            }
        }

        stage('Test') {
            steps {
               sh "mvn Test"
               
            }

            post {
                always{
                  junit '**/target/shurefire-reports/TEST-*.xml'
                }
            }
        }

        stage('Package') {
            steps {

               sh "mvn Package"
            
            }

            post {
                success {
                    archiveArtifacts artifacts: '**/target/**.war', followSymlinks: false
                }
            }
        } 
    }
}