pipeline {
    agent any

    stages {
        stage('validate') {
            steps {
               sh "mvn validate"
               sh "mvn clean"
            }
        }
         stage('Build') {
            steps {
               sh "mvn compile"
               
            }
        }

        stage('Test') {
            steps {
               sh "mvn Test"
               
            }

            post {
                always{
                  junit '**/target/shurefire-reports/TEST-*.xml'
                }
            }
        }
        stage('package') {
            
            steps {
               sh "mvn package"
            
            }

            post {
                success{
                    archiveArtifacts artifacts: '**/target/**.war', followSymlinks: false
                }
            }
        } 
    }
}